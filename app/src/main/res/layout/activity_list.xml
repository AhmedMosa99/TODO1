<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A2CCF "
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/arrow_foreground"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="0.7"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Lists ToDo"
            android:textColor="#FFFFFF "
            android:textSize="22dp"
            />

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
           android:layout_gravity="center"
            android:text="Logout"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lists :"
        android:textColor="#FFFFFF "
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginLeft="33dp"

        />
    <EditText
        android:id="@+id/Ltitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/editlist"
        android:hint="Add List"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:alpha="0.9"

        />
    <Button
        android:id="@+id/AddTask"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="add Task"
        android:background="@color/CreateButton"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tasks_rv"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />








</LinearLayout>
